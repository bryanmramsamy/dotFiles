#!/bin/bash

STATUS=`nordvpn status | grep "Status" | cut -d " " -f 2`
CITY=`nordvpn status | grep "City" | cut -d " " -f 2`

if [[ $STATUS == Connected ]]; then
    DISPLAY=$CITY
    COLOUR="#3CBF75"
elif [[ $STATUS == Connecting ]]; then
    DISPLAY='Connecting'
    COLOUR="#D8D782"
else
    DISPLAY='Disconnected'
    COLOUR="#E7766B"
fi

echo "%{F$COLOUR}ÔÅÅ (NordVPN) $DISPLAY%{F-}"
exit 0;

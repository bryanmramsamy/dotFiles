# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
# Original file can be found on /etc/i3/config

# DEFAULt SETTINGS
set $MOD Mod4

# Reload configuration file
bindsym $MOD+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $MOD+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $MOD+Shift+e exec "i3-nagbar -t warning -f 'pango:Ubuntu 10' -m 'DO YOU WANT TO LEAVE i3 ? YOUR Xsession WILL BE ENDED' -b 'Yes, exit i3' 'i3-msg exit'"


# RESOURCES

# Get colours from .Xresources
set_from_resource $DARK_BLUE dark_blue
set_from_resource $LIGHT_BLUE light_blue

set_from_resource $LIGHT_WHITE light_white
set_from_resource $DARK_WHITE dark_white

set_from_resource $DARK_BLACK dark_black
set_from_resource $LIGHT_BLACK light_black

set_from_resource $DARK_RED dark_red
set_from_resource $LIGHT_RED light_red

# Use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $LEFT h
set $DOWN j
set $UP k
set $RIGHT l


# NAVIGATION

# NumLock auto-enabled (numlockx)
exec_always --no-startup-id numlockx on

# Mouse hovering (disabled)
focus_follows_mouse no

# Touchpad natural scrolling
exec --no-startup-id synclient NaturalScrolling=1 VertScrollDelta=-113


# WORKSPACES (desktops)

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $WORKSPACE_0 "0: "
set $WORKSPACE_1 "1: "
set $WORKSPACE_2 "2: "
set $WORKSPACE_3 "3: "
set $WORKSPACE_4 "4: "
set $WORKSPACE_5 "5: "
set $WORKSPACE_6 "6: ⑥"
set $WORKSPACE_7 "7: ⑦"
set $WORKSPACE_8 "8: ⑧"
set $WORKSPACE_9 "9: ⑨"
set $WORKSPACE_10 "10: "

# Switch to workspace
bindsym $MOD+dead_grave workspace $WORKSPACE_0
bindsym $MOD+1 workspace $WORKSPACE_1
bindsym $MOD+2 workspace $WORKSPACE_2
bindsym $MOD+3 workspace $WORKSPACE_3
bindsym $MOD+4 workspace $WORKSPACE_4
bindsym $MOD+5 workspace $WORKSPACE_5
bindsym $MOD+6 workspace $WORKSPACE_6
bindsym $MOD+7 workspace $WORKSPACE_7
bindsym $MOD+8 workspace $WORKSPACE_8
bindsym $MOD+9 workspace $WORKSPACE_9
bindsym $MOD+0 workspace $WORKSPACE_10

# Move focused container to workspace
bindsym $MOD+Shift+dead_tilde move container to workspace $WORKSPACE_0
bindsym $MOD+Shift+exclam move container to workspace $WORKSPACE_1
bindsym $MOD+Shift+at move container to workspace $WORKSPACE_2
bindsym $MOD+Shift+numbersign move container to workspace $WORKSPACE_3
bindsym $MOD+Shift+dollar move container to workspace $WORKSPACE_4
bindsym $MOD+Shift+percent move container to workspace $WORKSPACE_5
bindsym $MOD+Shift+dead_circumflex move container to workspace $WORKSPACE_6
bindsym $MOD+Shift+ampersand move container to workspace $WORKSPACE_7
bindsym $MOD+Shift+asterisk move container to workspace $WORKSPACE_8
bindsym $MOD+Shift+parenleft move container to workspace $WORKSPACE_9
bindsym $MOD+Shift+parenright move container to workspace $WORKSPACE_10

# Move focused workspace between monitors
bindsym $MOD+Ctrl+$LEFT move workspace to output left
bindsym $MOD+Ctrl+$RIGHT move workspace to output right

# Assign specific apps to specific workspaces
# Workspace 1
assign [class="firefox"] $WORKSPACE_1
# Workspace 2
assign [class="Google-chrome"] $WORKSPACE_2
# Workspace 3
assign [class="Code"] $WORKSPACE_3
assign [class="StarUML"] $WORKSPACE_3
# Workspace 4
assign [class="Nautilus"] $WORKSPACE_4
assign [class="Nemo"] $WORKSPACE_4
assign [class="vlc"] $WORKSPACE_4
# Workspace 5
assign [class="Mailspring"] $WORKSPACE_5
assign [class="Signal"] $WORKSPACE_5
# Workspace 12
assign [class="VirtualBox Manager"] $WORKSPACE_10


# CONTAINERS (windows)

# Use Mouse+$MOD to drag floating windows to their wanted position
floating_modifier $MOD

# Kill focused window
bindsym $MOD+Shift+q kill

# Change focus
bindsym $MOD+$LEFT focus left
bindsym $MOD+$DOWN focus down
bindsym $MOD+$UP focus up
bindsym $MOD+$RIGHT focus right

# Move focused window
bindsym $MOD+Shift+$LEFT move left
bindsym $MOD+Shift+$DOWN move down
bindsym $MOD+Shift+$UP move up
bindsym $MOD+Shift+$RIGHT move right

# Resize window (you can also use the mouse for that)
bindsym $MOD+r mode "RESIZE MODE ON"

mode "RESIZE MODE ON" {
    bindsym $LEFT resize shrink width 10 px or 10 ppt
    bindsym $DOWN resize grow height 10 px or 10 ppt
    bindsym $UP resize shrink height 10 px or 10 ppt
    bindsym $RIGHT resize grow width 10 px or 10 ppt

    # back to normal: Enter, Escape or $MOD+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $MOD+r mode "default"
}

# Split in horizontal orientation
bindsym $MOD+b split h

# Split in vertical orientation
bindsym $MOD+v split v

# Enter fullscreen mode for the focused container
bindsym $MOD+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $MOD+s layout stacking
bindsym $MOD+w layout tabbed
bindsym $MOD+e layout toggle split

# Toggle tiling / floating
bindsym $MOD+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $MOD+space focus mode_toggle

# Focus the parent container
bindsym $MOD+a focus parent

# Focus the child container
bindsym $MOD+Shift+a focus child

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu Bold, Font Awesome 12

# Custom windows colours
# WINDOW TYPE           TOP-BORDER      WIN-BORDER      TEXT            INDICATOR
client.focused          $LIGHT_BLUE     $LIGHT_BLUE     $LIGHT_WHITE    $LIGHT_WHITE
client.unfocused        $LIGHT_BLACK    $LIGHT_BLACK    $DARK_WHITE     $DARK_WHITE
client.focused_inactive $LIGHT_BLUE     $LIGHT_BLUE     $LIGHT_WHITE    $LIGHT_WHITE
client.urgent           $LIGHT_RED      $DARK_RED       $LIGHT_WHITE    $LIGHT_WHITE

# Window transparancy (compton)
exec --no-startup-id compton

# Gaps between windows (i3-gaps)
gaps inner 10
smart_gaps on

# Floating windows
for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [class="Nm-connection-editor" instance="nm-connection-editor"] floating enable


# PROGRAM LAUNCHER

# Start a terminal
bindsym $MOD+Return exec i3-sensible-terminal

# Rofi menu (Documentation: https://www.mankier.com/1/rofi)
# run: shows a list of executables in $PATH and can launch them
bindsym $MOD+d exec rofi -modi run -show run
# drun: shows a list of executables in $PATH and can launch them
bindsym $MOD+Shift+d exec rofi -modi drun -show drun -show-icons
# window: shows a list of the windows on the current desktop and allows switching between them
bindsym $MOD+Tab exec rofi -show window


# UTILITIES

# Default workspace on startup
exec workspace $WORKSPACE_0 output $MONITOR1

# Screen layout
exec_always $HOME/.screenlayout/main.sh

# Desktop wallpaper
exec_always feh --bg-scale $DEFAULT_WALLPAPER_PATH

# Screenfetch on startup in new terminal
exec gnome-terminal -- zsh -c "screenfetch; zsh"  # TODO: On workspace1

# Polybar
exec_always --no-startup-id $HOME/.config/polybar/main.sh

# Enable sound on i3 with starting pulseaudio
exec_always start-pulseaudio-x1

# Pulse Audio controls
# Volume increase
bindsym $MOD+F3 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
# Volume decrease
bindsym $MOD+F2 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
# Mute volume
bindsym $MOD+F1 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
# Mute mic
bindsym $MOD+F4 exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Screen brightness
# TODO

# Media player
# TODO

# Scratchpad
# Move the currently focused window to the scratchpad
bindsym $MOD+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $MOD+minus scratchpad show

# Lockscreen (i3lock)
bindsym $MOD+Shift+l exec i3lock  # TODO: Customise lockscreen

# Network manager
exec_always --no-startup-id nm-applet

# Mailspring
exec mailspring -b  # open in background

# Gnome screenshot
bindsym Print exec gnome-screenshot -cf $HOME/Pictures/Screenshots/`date +%Y-%m-%d_%H:%M:%S`.png
bindsym $MOD+Shift+s exec gnome-screenshot -i
